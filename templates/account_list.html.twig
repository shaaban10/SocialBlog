{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Account List
{% endblock %}

{% block body %}
    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    </li>
                </ul>
            </nav>
            {% include 'admin_sideMenu.html.twig' %}

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1>All Accounts</h1>
                </section>

                <section class="content">
                    <!-- Default box -->
                    <div class="card">
                        <div class="card-body p-0">
                            <table class="table table-striped projects">
                                <thead>
                                    <tr>
                                        <th style="width: 5%">#</th>
                                        <th style="width: 20%">Full Name</th>
                                        <th style="width: 25%">Photo</th>
                                        <th style="width: 15%">Joined Date</th>
                                        <th style="width: 35%">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for account in accounts %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ account.getFullName() }}</td>
                                        <td>
                                            <img alt="Avatar" class="table-avatar" src="{{ asset(account.getAvatarPath()) }}">
                                        </td>
                                        <td>56days</td>
                                        <td class="project-actions">
                                            <a class="btn btn-primary btn-sm" href="{{ path('profile_page_view', {id: account.id}) }}" target="_blank">
                                                <i class="fas fa-folder"></i> View
                                            </a>
                                            
                                            <a class="btn btn-danger btn-sm" href="{{ path('profile_delete', {id: account.id}) }}">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </section>
            </div>
            <!-- /.content-wrapper -->
        </div>
        <!-- ./wrapper -->
    </body>
{% endblock %}
